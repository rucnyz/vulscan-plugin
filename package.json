{
    "icon": "assets/icon.jpg",
    "name": "virtueguard-code",
    "displayName": "VirtueGuard-Code",
    "description": "A VSCode extension that scans code for vulnerabilities",
    "version": "0.0.6",
    "publisher": "virtueai",
    "repository": {
        "type": "git",
        "url": "https://github.com/rucnyz/vulscan-plugin"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vulscan.analyzeCode",
                "title": "VulScan: Analyze Selected Code"
            },
            {
                "command": "vulscan.analyzeEUAIAct",
                "title": "VulScan: Analyze Selected Code for EU AI Action"
            },
            {
                "command": "vulscan.clearDecorations",
                "title": "VulScan: Clear Vulnerability Highlights"
            },
            {
                "command": "vulscan.showDetails",
                "title": "VulScan: Show Detailed Explanation"
            },
            {
                "command": "vulscan.toggleAutoAnalyze",
                "title": "VulScan: Toggle Auto-Analyze on Save"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "vulscan.analyzeCode",
                    "group": "navigation"
                },
                {
                    "command": "vulscan.clearDecorations",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "VulScan",
            "properties": {
                "vulscan.apiBaseUrl": {
                    "type": "string",
                    "default": "https://api.virtueai.io/api/vulscan",
                    "description": "Base URL for the vulnerability analysis API endpoints."
                },
                "vulscan.autoAnalyzeOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically analyze the file when saved."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    },
    "license": "MIT"
}