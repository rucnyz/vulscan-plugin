{
  "name": "vulscan",
  "displayName": "VulScan",
  "description": "A VSCode extension that scans selected code for vulnerabilities",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vulscan.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vulscan.analyzeCode",
        "title": "Analyze Code for Vulnerabilities"
      },
      {
        "command": "vulscan.clearDecorations",
        "title": "Clear Vulnerability Highlights"
      },
      {
        "command": "vulscan.showDetails",
        "title": "Show Analysis Details"
      },
      {
        "command": "vulscan.toggleAutoAnalyze",
        "title": "Toggle Auto-Analyze on Save"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "vulscan.analyzeCode",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vulscan.clearDecorations",
        "key": "escape",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "VulScan",
      "properties": {
        "vulscan.apiUrl": {
          "type": "string",
          "default": "http://6479122b-01.cloud.together.ai:4400/analyze",
          "description": "URL for the vulnerability scanning API endpoint"
        },
        "vulscan.autoAnalyzeOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze files for vulnerabilities on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
