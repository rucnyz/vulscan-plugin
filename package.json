{
    "icon": "assets/icon.jpg",
    "name": "virtueguard-code",
    "displayName": "VirtueGuard-Code",
    "description": "A VSCode extension that scans code for vulnerabilities",
    "version": "0.1.2",
    "publisher": "virtueai",
    "repository": {
        "type": "git",
        "url": "https://github.com/rucnyz/vulscan-plugin"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vulscan.analyzeCode",
                "title": "VulScan: Analyze Selected Code"
            },
            {
                "command": "vulscan.analyzeEUAIAct",
                "title": "VulScan: Analyze Selected Code for EU AI Action"
            },
            {
                "command": "vulscan.clearDecorations",
                "title": "VulScan: Clear Vulnerability Highlights"
            },
            {
                "command": "vulscan.showDetails",
                "title": "VulScan: Show Detailed Explanation"
            },
            {
                "command": "vulscan.toggleAutoAnalyze",
                "title": "VulScan: Toggle Auto-Analyze on Save"
            },
            {
                "command": "vulscan.selectModel",
                "title": "VulScan: Select Analysis Model"
            },
            {
                "command": "vulscan.checkTokenUsage",
                "title": "VulScan: Check Token Usage"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "vulscan.analyzeCode",
                    "group": "navigation"
                },
                {
                    "command": "vulscan.clearDecorations",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "VulScan",
            "properties": {
                "vulscan.apiBaseUrl": {
                    "type": "string",
                    "default": "https://api.virtueai.io/api/vulscan",
                    "description": "Base URL for the vulnerability analysis API endpoints.",
                    "order": 1
                },
                "vulscan.autoAnalyzeOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically analyze the file when saved.",
                    "order": 20
                },
                "vulscan.selectedModel": {
                    "type": "string",
                    "default": "virtueguard-code",
                    "enum": [
                        "virtueguard-code",
                        "claude-4-sonnet",
                        "gpt-4.1"
                    ],
                    "enumDescriptions": [
                        "VirtueGuard-Code: Optimized for security vulnerability detection",
                        "Claude 4 Sonnet: Advanced AI model for comprehensive code analysis",
                        "GPT-4.1: Advanced AI model for comprehensive code analysis"
                    ],
                    "description": "Select the AI model to use for vulnerability analysis.",
                    "order": 5
                },
                "vulscan.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Your VirtueAI API key. Get your API key by booking a demo: https://meetings.hubspot.com/shekhar-bapat.",
                    "order": 10,
                    "markdownDescription": "[Check Usage](command:vulscan.checkTokenUsage)\n\nYour VirtueAI API key. Get your API key by [booking a demo](https://meetings.hubspot.com/shekhar-bapat)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/sinon": "^10.0.16",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^11.0.3",
        "mocha": "^10.2.0",
        "sinon": "^15.2.0",
        "typescript": "^5.1.3"
    },
    "license": "MIT"
}